                        android:id="@+id/people_4"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="#B3D167E6">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:padding="10dp">
                                <TextView
                                    android:id="@+id/name_4"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name: Jeerasak"
                                    android:textSize="18dp">
                                </TextView>
                                <TextView
                                    android:layout_below="@+id/name_4"
                                    android:id="@+id/name_4_1"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="             Thummakhuntoe "
                                    android:textSize="18dp">
                                </TextView>
                                <TextView
                                    android:id="@+id/nickname_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/name_4_1"
                                    android:text="Nickname:  Koom"
                                    android:textSize="18dp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_below="@+id/nickname_4"
                                    android:id="@+id/ID_4"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID:  610510799"
                                    android:textSize="18dp">
                                </TextView>
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_below="@+id/ID_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Role:  Report"
                                    android:textSize="18dp">
                                </TextView>

                            </RelativeLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/p799"
                                android:padding="10dp">
                            </ImageView>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <ImageView
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
        </ImageView>
    </LinearLayout>
</RelativeLayout>