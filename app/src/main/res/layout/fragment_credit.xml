                                    android:id="@+id/ID_3"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID:  610510662"
                                    android:textSize="18dp">
                                </TextView>
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_below="@+id/ID_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Role:  Animation"
                                    android:textSize="18dp">
                                </TextView>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
