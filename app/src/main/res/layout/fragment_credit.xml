                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Role:  Design"
                                    android:textSize="18dp">
                                </TextView>
                            </RelativeLayout>
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/p651"
                                android:padding="10dp">

                            </ImageView>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_below="@+id/people_2"
                        android:id="@+id/people_3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="#B3DD8EFF">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/p662"
                                android:padding="10dp">
                            </ImageView>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:padding="10dp">
                                <TextView
                                    android:id="@+id/name_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name: Phanthakan Na"
                                    android:textSize="18dp"
                                    android:textStyle="bold">
                                </TextView>
                                <TextView
                                    android:layout_below="@+id/name_3"
                                    android:id="@+id/name_3_1"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="             Chiangmai "
                                    android:textSize="18dp">
                                </TextView>
                                <TextView
                                    android:layout_below="@+id/name_3_1"
                                    android:id="@+id/nickname_3"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nickname:  Aum"
